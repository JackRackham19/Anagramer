<Window x:Class="Anagramer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anagramer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <DockPanel>
                <Label DockPanel.Dock="Left"  Content="Dictionary:" />
            </DockPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Subject:" />
                <TextBox DataContext="{Binding Subject, Mode=OneWayToSource}" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer>
            <ListBox ItemsSource="{Binding Anagrams, Mode=OneWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </DockPanel>

</Window>
